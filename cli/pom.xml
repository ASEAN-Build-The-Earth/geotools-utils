    <scm>
        <url>https://github.com/ASEAN-Build-The-Earth/geotools-utils/tree/main</url>
        <connection>scm:git@github.com:ASEAN-Build-The-Earth/geotools-utils.git</connection>
        <developerConnection>scm:git@github.com:ASEAN-Build-The-Earth/geotools-utils.git</developerConnection>
